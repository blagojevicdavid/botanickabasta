<Window x:Class="BotanickaBasta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BotanickaBasta"
        mc:Ignorable="d"
        Title="Botanicka Basta"
        Width="1300" Height="800"
        MinWidth="1300" MinHeight="800">

    <Grid>
        <TabControl Name="tabA">

            <TabItem Header="Tab 1">
                <Label Content="Sadrzaj 1"/>
                <!--Ovde sadrzaj za prvi tab-->
            </TabItem>

            <!-- TAB 2: Mapa + Baštovani -->
            <TabItem Header="Mapa baste i bastovani">
                <!-- Glavni Grid: 2* | splitter | *  -->
                <Grid UseLayoutRounding="True" SnapsToDevicePixels="True">  <!--UseLayoutRounding="True"-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" MinWidth="400"/>
                        <!-- Levo: mapa -->
                        <ColumnDefinition Width="5"/>
                        <!-- Srednji splitter -->
                        <ColumnDefinition Width="*" MinWidth="300"/>
                        <!-- Desno: baštovani -->
                    </Grid.ColumnDefinitions>

                    <!-- LEVO: MAPA (placeholder, skalira se preko Viewbox-a) -->
                    <!-- LEVO: MAPA -->
                    <Border Grid.Column="0" Margin="10" Background="White" ClipToBounds="True">
                        <local:ZoomPanBehavior x:Name="MapZoom"
                         MinScale="0.6"
                         MaxScale="4"
                         ZoomStep="1.1"
                         EdgeMargin="0"          
                         AutoFitOnResize="True"
                         FitFactor="1.0"
                         ClipToBounds="True"
                         HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Unutar local:ZoomPanBehavior -->
                            <Grid x:Name="MapContent" Width="800" Height="600">
                                <!-- (pozadina mape) -->
                                <Canvas Width="800" Height="600" Background="#F5FFF5"/>

                                <!-- SEKCIJE: crtamo oblasti (pravougaonike) -->
                                <ItemsControl x:Name="SekcijeItems" ItemsSource="{Binding MapSekcije}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas Width="800" Height="600"  MouseLeftButtonDown="Mapa_ClearSelection" Background="White"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                            <Setter Property="Canvas.Top"  Value="{Binding Y}"/>
                                            <EventSetter Event="MouseLeftButtonDown" Handler="SekcijaArea_MouseLeftButtonDown"/>
                                            </Style>
                                    </ItemsControl.ItemContainerStyle>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Rectangle x:Name="AreaRect"
                               Width="{Binding Sirina}"
                               Height="{Binding Visina}"
                               Fill="#E6F3FF"
                               Stroke="#5B9BD5"
                               StrokeThickness="2"
                               RadiusX="6" RadiusY="6"
                               MouseLeftButtonDown="SekcijaArea_MouseLeftButtonDown"/>
                                                <TextBlock Text="{Binding Sekcija.Naziv}" Margin="6" FontWeight="Bold"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- MARKERI: bedževi za sekcije (zaseban sloj iznad oblasti) -->
                                <ItemsControl x:Name="MarkeriItems" ItemsSource="{Binding MapSekcije}" Panel.ZIndex="100">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas Width="800" Height="600"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Canvas.Left" Value="{Binding Marker.X}"/>
                                            <Setter Property="Canvas.Top"  Value="{Binding Marker.Y}"/>
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:Name="MarkerBadge"
                        CornerRadius="10" Padding="6,2"
                        Background="#2D89EF" Cursor="Hand"
                        ToolTip="{Binding Sekcija.Opis}"
                        MouseLeftButtonDown="Marker_MouseLeftButtonDown">
                                                <TextBlock Text="{Binding Marker.Labela}" Foreground="White" FontWeight="Bold"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>

                        </local:ZoomPanBehavior>
                    </Border>



                    <!-- SREDINA-->
                    <GridSplitter Grid.Column="1"
                                  Width="5"
                                  HorizontalAlignment="Stretch"
                                  Background="#DDD"
                                  ResizeDirection="Columns"
                                  ResizeBehavior="PreviousAndNext"/>

                    <!-- DESNO: BAŠTOVANI PANEL -->
                    <Border Grid.Column="2" Margin="0 10 10 10" Background="White" ClipToBounds="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- 0 Naslov -->
                                <RowDefinition Height="Auto"/>
                                <!-- 1 Dugmad (Baštovani) -->
                                <RowDefinition Height="*"/>
                                <!-- 2 DataGrid Baštovani -->
                                <RowDefinition Height="5"/>
                                <!-- 3 Splitter -->
                                <RowDefinition Height="Auto"/>
                                <!-- 4 Tekst: Biljke... -->
                                <RowDefinition Height="*"/>
                                <!-- 5 ListBox biljaka (baštovan) -->
                                <RowDefinition Height="Auto"/>
                                <!-- 6 Detalji sekcije -->
                                <RowDefinition Height="Auto"/>
                                <!-- 7 Raspored biljaka -->
                            </Grid.RowDefinitions>

                            <!-- Naslov -->
                            <TextBlock Grid.Row="0"
                   Text="Baštovani"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

                            <!-- Dugmad (Baštovani) -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <StackPanel.Resources>
                                    <Style TargetType="Button">
                                        <Setter Property="Margin" Value="3,0"/>
                                    </Style>
                                </StackPanel.Resources>

                                <Button Content="Dodaj" Width="80" Margin="5"/>
                                <Button Content="Izmeni" Width="80" Margin="5"/>
                                <Button Content="Obriši" Width="80" Margin="5"/>
                            </StackPanel>

                            <!-- DataGrid za baštovane -->
                            <DataGrid Grid.Row="2" x:Name="BastovaniGrid"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Bastovani}"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  Margin="5"
                  SelectionChanged="BastovaniGrid_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Ime" Binding="{Binding Ime}" Width="*"/>
                                    <DataGridTextColumn Header="Prezime" Binding="{Binding Prezime}" Width="*"/>
                                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto" MinWidth="80"/>
                                    <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- SPLITTER -->
                            <GridSplitter Grid.Row="3"
                      Height="5"
                      HorizontalAlignment="Stretch"
                      Background="#DDD"
                      ResizeDirection="Rows"
                      ResizeBehavior="PreviousAndNext"/>

                            <!-- Naslov liste biljaka -->
                            <TextBlock Grid.Row="4" Margin="5,10,5,5" FontWeight="Bold">
            <Run Text="Biljke za koje je zadužen"/>
            <Run Text=" ("/><Run Text=")"/>
                            </TextBlock>

                            <!-- Lista biljaka selektovanog baštovana -->
                            <ListBox Grid.Row="5" x:Name="BiljkeListBox" Margin="5"
                 ItemsSource="{Binding ElementName=BastovaniGrid, Path=SelectedItem.ZaduzeneBiljke}"
                 DisplayMemberPath="Naziv"
                 SelectionChanged="BiljkeListBox_SelectionChanged"/>

                            <!-- Detalji sekcije (read-only) -->
                            <Border Grid.Row="6" Margin="5,12,5,10" Padding="8"
                BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Background="#FAFAFA">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.ColumnSpan="3"
                           Text="Detalji sekcije" FontWeight="Bold" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Text="Naziv:" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="SekcijaNazivVal" Grid.Row="1" Grid.Column="2" Text="—"/>

                                    <TextBlock Grid.Row="2" Text="Opis:" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="SekcijaOpisVal" Grid.Row="2" Grid.Column="2"
                           Text="—" TextWrapping="Wrap"/>

                                    <TextBlock Grid.Row="3" Text="Kapacitet:" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="SekcijaKapacitetVal" Grid.Row="3" Grid.Column="2" Text="—"/>
                                </Grid>
                            </Border>

                            <!-- Raspored biljaka (dodela/uklanjanje/undo) -->
                            <Border Grid.Row="7" Margin="5,0,5,8" Padding="6"
                BorderBrush="#EEE" BorderThickness="1" CornerRadius="6" Background="#FCFCFC">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <StackPanel.Resources>
                                        <Style TargetType="Button">
                                            <Setter Property="Margin" Value="3,0"/>
                                        </Style>
                                    </StackPanel.Resources>

                                    <Button x:Name="btnAssign"             Content="Dodeli biljku u sekciju" Width="170"
                        Click="DodeliBiljkuUSekciju_Click" IsEnabled="False"/>
                                    <Button x:Name="btnRemoveFromSekcija"  Content="Ukloni iz sekcije"        Width="140"
                        Click="UkloniBiljkuIzSekcije_Click" IsEnabled="False"/>
                                    <Button x:Name="btnUndo"               Content="Poništi"                  Width="90"
                        Click="PonistiAkciju_Click" IsEnabled="False"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>


                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
