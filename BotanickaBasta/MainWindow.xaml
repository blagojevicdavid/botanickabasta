<Window x:Class="BotanickaBasta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BotanickaBasta"
        mc:Ignorable="d"
        Title="Botanicka Basta"
        Width="1300" Height="800"
        MinWidth="1300" MinHeight="800"
        MaxHeight="900" MaxWidth="1400">

    <Grid x:Name="RootGrid"> 
        <TabControl Name="tabA">

                <!--///////////////////////////////////  TAB1    /////////////////////////////////////////////-->
            <TabItem Header="Biljni eksponati">
                <Border BorderThickness="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <DataGrid Name="biljkeDG"
Grid.Column="0"
AutoGenerateColumns="False"
IsReadOnly="True"
CanUserAddRows="False"
EnableRowVirtualization="True"
EnableColumnVirtualization="True"
FontSize="17"
HorizontalAlignment="Stretch"
VerticalAlignment="Stretch"
Margin="5"
MouseDoubleClick="biljkeDG_MouseDoubleClick"
CanUserSortColumns="True"
MinRowHeight="30"
                    PreviewMouseLeftButtonDown="biljkeDG_PreviewMouseLeftButtonDown">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Slika" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding Slika}" Width="35" Height="35"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="Sifra" Binding="{Binding Sifra}" Width="*"/>
                                <DataGridTextColumn Header="Naucni naziv" Binding="{Binding NaucniNaziv}" Width="2*"/>
                                <DataGridTextColumn Header="Uobicajeni naziv" Binding="{Binding UobicajeniNaziv}" Width="2*"/>
                                <DataGridTextColumn Header="Porodica" Binding="{Binding Porodica}" Width="*"/>
                                <DataGridTextColumn Header="Datum nabavke" Binding="{Binding DatumNabavke}" Width="*"/>
                                <DataGridTextColumn Header="Lokacija" Binding="{Binding Lokacija}" Width="*"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5">
                            <Button Name="btnPrethodna" Content="Prethodna" Margin="5" Click="btnPrethodna_Click"/>
                            <Label Name="labelStranica" Content="Stranica 1/1" VerticalAlignment="Center"/>
                            <Button Name="btnSledeca" Content="Sledeća" Margin="5" Click="btnSledeca_Click"/>
                        </StackPanel>

                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Border Grid.Column="2" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Background="#FAFAFA" Margin="4.9">
                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <StackPanel VerticalAlignment="Top" Margin="10 8 10 0" Grid.Row="0">
                                        <TextBlock FontSize="18">Šifra</TextBlock>
                                        <TextBox Padding="3" Name="sifraUnos" FontSize="15" Text="{Binding Sifra, Mode=TwoWay}" LostFocus="sifraUnos_LostFocus"></TextBox>
                                    </StackPanel>

                                    <StackPanel VerticalAlignment="Top" Margin="10 8 10 0" Grid.Row="1">
                                        <TextBlock FontSize="18">Naučni naziv</TextBlock>
                                        <TextBox Padding="3" Name="naucniUnos" FontSize="15" Text="{Binding NaucniNaziv, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    </StackPanel>

                                    <StackPanel VerticalAlignment="Top" Margin="10 8 10 0" Grid.Row="2">
                                        <TextBlock FontSize="18">Uobičajeni naziv</TextBlock>
                                        <TextBox Padding="3" Name="uobicajeniUnos" FontSize="15" Text="{Binding UobicajeniNaziv, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    </StackPanel>

                                    <StackPanel VerticalAlignment="Top" Margin="10 8 10 0" Grid.Row="3">
                                        <TextBlock FontSize="18">Porodica</TextBlock>
                                        <TextBox Padding="3" Name="porodicaUnos" FontSize="15" Text="{Binding Porodica, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    </StackPanel>

                                    <StackPanel VerticalAlignment="Top" Margin="10 8 10 0" Grid.Row="4">
                                        <TextBlock FontSize="18">Datum nabavke</TextBlock>
                                        <TextBox Padding="3" Name="datumUnos" FontSize="15">
                                            <TextBox.Text>
                                                <Binding Path="DatumNabavke" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                                    <Binding.ValidationRules>
                                                        <local:DatumValidationRule />
                                                    </Binding.ValidationRules>
                                                </Binding>
                                            </TextBox.Text>
                                        </TextBox>
                                    </StackPanel>

                                    <StackPanel VerticalAlignment="Top" Margin="10 8 10 0" Grid.Row="5">
                                        <TextBlock FontSize="18">Lokacija</TextBlock>
                                        <TextBox Padding="3" Name="lokacijaUnos" FontSize="15" Text="{Binding Lokacija, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    </StackPanel>

                                    <StackPanel VerticalAlignment="Top" Margin="10 8 10 0" Grid.Row="6">
                                        <TextBlock FontSize="18">Status</TextBlock>
                                        <TextBox Padding="3" Name="statusUnos" FontSize="15" Text="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Background="#FAFAFA" Margin="4.9">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Button Name="DodajBTN" Grid.Row="0" Grid.Column="0" Margin="19" FontSize="15" Click="DodajBTN_Click">Dodaj biljku</Button>
                                        <Button Name="eksportBTN" Grid.Row="0" Grid.Column="1" Margin="19" FontSize="15" Click="eksportBTN_Click">Eksport u CSV fajl</Button>
                                        <Button Name="promeniSliku" Click="promeniSliku_Click" Grid.Row="1" Grid.Column="0" Margin="19" FontSize="15">Promeni sliku</Button>
                                        <Button Name="ObrisiBTN" Click="ObrisiBTN_Click" Grid.Row="1" Grid.Column="1" Margin="19" FontSize="15">Obriši</Button>
                                    </Grid>

                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

            <!-- TAB 2: Mapa + Baštovani -->
            <TabItem Header="Mapa baste i bastovani">

                <Grid UseLayoutRounding="True" SnapsToDevicePixels="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="23*" MinWidth="400"/>
                        <ColumnDefinition Width="836*"/>
                        <!-- mapa -->
                        <ColumnDefinition Width="5"/>
                        <!-- Srednji spliter -->
                        <ColumnDefinition Width="430*" MinWidth="300"/>
                        <!-- bastovani -->
                    </Grid.ColumnDefinitions>

                    <!-- MAPA -->
                    <Border Grid.Column="0" Margin="10,10,10,10" Background="White" ClipToBounds="True" Grid.ColumnSpan="2">
                        <local:ZoomPanBehavior x:Name="MapZoom"
                         MinScale="0.6"
                         MaxScale="4"
                         ZoomStep="1.1"
                         EdgeMargin="0"          
                         AutoFitOnResize="True"
                         FitFactor="1.0"
                         ClipToBounds="True"
                         HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid x:Name="MapContent"  >
                                <!-- pozadina mape -->
                                <Canvas Name="MapCanvas" Width="800" Height="600" Background="#F5FFF5"/>
                                
                                <ItemsControl x:Name="SekcijeItems" ItemsSource="{Binding MapSekcije}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas x:Name="ItemControlCanvas" Width="800" Height="600"  MouseLeftButtonDown="Mapa_ClearSelection" Background="white"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                            <Setter Property="Canvas.Top"  Value="{Binding Y}"/>
                                            <EventSetter Event="MouseLeftButtonDown" Handler="SekcijaArea_MouseLeftButtonDown"/>
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Rectangle x:Name="AreaRect"
                               Width="{Binding Sirina}"
                               Height="{Binding Visina}"
                               Fill="#E6F3FF"
                               Stroke="#5B9BD5"
                               StrokeThickness="2"
                               RadiusX="6" RadiusY="6"
                               MouseLeftButtonDown="SekcijaArea_MouseLeftButtonDown"/>
                                                <TextBlock Text="{Binding Sekcija.Naziv}" Margin="6" FontWeight="Bold"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <ItemsControl x:Name="MarkeriItems" ItemsSource="{Binding MapSekcije}" Panel.ZIndex="100">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas Width="800" Height="600"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Canvas.Left" Value="{Binding Marker.X}"/>
                                            <Setter Property="Canvas.Top"  Value="{Binding Marker.Y}"/>
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:Name="MarkerBadge"
                        CornerRadius="10" Padding="6,2"
                        Background="#2D89EF" Cursor="Hand"
                        ToolTip="{Binding Sekcija.Opis}"
                        MouseLeftButtonDown="Marker_MouseLeftButtonDown">
                                                <TextBlock Text="{Binding Marker.Labela}" Foreground="White" FontWeight="Bold"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>

                        </local:ZoomPanBehavior>
                    </Border>

                    <!-- DESNO BASTOVANI -->
                    <Border Grid.Column="3" Margin="0,10,10,10" Background="White" ClipToBounds="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                            </Grid.RowDefinitions>

                            <!-- Naslov -->
                            <TextBlock Grid.Row="0"
                   Text="Baštovani"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

                            <!-- Dugmad bastovani -->
                            <Border Grid.Row="1"  Padding="6" Margin="5,0,5,8"
                BorderBrush="#EEE" BorderThickness="1" CornerRadius="6" Background="#FCFCFC">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 0">
                                    <StackPanel.Resources>
                                        <Style TargetType="Button">
                                            <Setter Property="Margin" Value="3,0"/>
                                        </Style>
                                    </StackPanel.Resources>

                                    <Button Content="Dodaj" Width="80" Margin="5" Name="Add" Click="Add_Click"/>
                                    <Button Content="Izmeni" Width="80" Margin="5" Name="Edit" Click="Edit_Click" IsEnabled="False" />
                                    <Button Content="Obriši" Width="80" Margin="5" Name="Delete" Click="Delete_Click" IsEnabled="False"/>
                                </StackPanel>
                            </Border>

                            <!-- DataGrid za bastovane -->
                            <DataGrid Grid.Row="2" x:Name="BastovaniGrid"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Bastovani}"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  Margin="5"
                  SelectionChanged="BastovaniGrid_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Ime" Binding="{Binding Ime}" Width="*"/>
                                    <DataGridTextColumn Header="Prezime" Binding="{Binding Prezime}" Width="*"/>
                                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto" MinWidth="80"/>
                                    <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>


                            <!-- Naslov liste biljaka -->
                            <TextBlock Grid.Row="4" Margin="5,10,5,5" FontWeight="Bold">
            <Run Text="Biljke za koje je zadužen"/>
                            </TextBlock>

                            <!-- Lista biljaka selektovanog baštovana -->
                            <ListBox Grid.Row="5" x:Name="BiljkeListBox" Margin="5"
                 ItemsSource="{Binding ElementName=BastovaniGrid, Path=SelectedItem.zaduzeneBiljke}"
                 DisplayMemberPath="Naziv"
                 SelectionChanged="BiljkeListBox_SelectionChanged"/>

                            <!-- Detalji sekcije (read-only) -->
                            <Border Grid.Row="6" Margin="5,12,5,10" Padding="8"
                BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Background="#FAFAFA">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.ColumnSpan="3"
                           Text="Detalji sekcije" FontWeight="Bold" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Text="Naziv:" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="SekcijaNazivVal" Grid.Row="1" Grid.Column="2" Text="—"/>

                                    <TextBlock Grid.Row="2" Text="Opis:" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="SekcijaOpisVal" Grid.Row="2" Grid.Column="2"
                           Text="—" TextWrapping="Wrap"/>

                                    <TextBlock Grid.Row="3" Text="Kapacitet:" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="SekcijaKapacitetVal" Grid.Row="3" Grid.Column="2" Text="—"/>
                                </Grid>
                            </Border>

                            <!-- Raspored biljaka (dodela/uklanjanje/undo) -->
                            <Border Grid.Row="7" Margin="5,0,5,8" Padding="6"
                BorderBrush="#EEE" BorderThickness="1" CornerRadius="6" Background="#FCFCFC">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <StackPanel.Resources>
                                        <Style TargetType="Button">
                                            <Setter Property="Margin" Value="4,0"/>
                                        </Style>
                                    </StackPanel.Resources>

                                    <Button x:Name="btnAssign"             Content="Dodeli" Width="50"
                        Click="DodeliBiljkuUSekciju_Click" IsEnabled="False"/>
                                    <Button x:Name="btnRemoveFromSekcija"  Content="Ukloni biljku"        Width="70"
                        Click="UkloniBiljkuIzSekcije_Click" IsEnabled="False"/>
                                    <Button x:Name="btnEditSekcija"  Content="Izmeni sekciju"        Width="80"
Click="btnEditSekcija_Click" IsEnabled="False"/>
                                    <Button x:Name="btnUndo"               Content="Undo"                  Width="40"
                        Click="PonistiAkciju_Click" IsEnabled="False"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                        <Popup x:Name="popupBastovan"
                               PlacementTarget="{Binding ElementName=RootGrid}"
                               Placement="Center"
                               AllowsTransparency="True"
                               StaysOpen="False"
                               PopupAnimation="Fade"
                               Opened="popupBastovan_Opened"
                               Panel.ZIndex="20">
                            <Border Background="White" Padding="18" CornerRadius="12"
                                    BorderBrush="#DDD" BorderThickness="1">
                                <Grid Width="420">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Name="PopupTitle" Grid.Row="0" Text="Dodaj baštovana" FontSize="18" FontWeight="Bold" TextAlignment="Center" Margin="0 0 0 0"/>

                                    <!-- Polja -->
                                    <Grid Grid.Row="2" Margin="0">
                                        <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        

                                        <!-- Ime -->
                                        <TextBlock Grid.Row="0" Text="Ime:" Margin="0 0 10 8" VerticalAlignment="Center"/>
                                        <TextBox   Grid.Row="0" Grid.Column="1" x:Name="txtIme" Margin="0 0 0 8" />

                                        <!-- Prezime -->
                                        <TextBlock Grid.Row="1" Text="Prezime:" Margin="0 0 10 8" VerticalAlignment="Center"/>
                                        <TextBox   Grid.Row="1" Grid.Column="1" x:Name="txtPrezime" Margin="0 0 0 8"/>

                                        <!-- ID -->
                                        <TextBlock Grid.Row="2" Text="ID:" Margin="0 0 10 8" VerticalAlignment="Center"/>
                                        <TextBox   Grid.Row="2" Grid.Column="1" x:Name="txtZaposlenickiId" Margin="0 0 0 8"/>

                                        <!-- Telefon -->
                                        <TextBlock Grid.Row="3" Text="Telefon:" Margin="0 0 10 0" VerticalAlignment="Center"/>
                                        <TextBox   Grid.Row="3" Grid.Column="1" x:Name="txtTelefon"/>
                                    </Grid>


                                    <!-- Dugmad -->
                                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="Otkaži" MinWidth="90" Click="BtnCancel_Click"/>
                                        <Button Content="Sačuvaj" MinWidth="100" Margin="10 0 0 0"
                                                Click="BtnSave_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Popup>
                        
                        <!--POPUP za izmenu sekcije-->
                        <Popup x:Name="popupSekcija"
                                   PlacementTarget="{Binding ElementName=RootGrid}"
                                   Placement="Center"
                                   AllowsTransparency="True"
                                   StaysOpen="False"
                                   PopupAnimation="Fade"
                                   Opened="popupSekcija_Opened"
                                   Panel.ZIndex="20">
                        <Border Background="White" Padding="18" CornerRadius="12" BorderBrush="#DDD" BorderThickness="1">
                            <Grid Width="480">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock x:Name="PopupSekcijaTitle"
                                                     Grid.Row="0"
                                                     Text="Izmeni sekciju"
                                                     FontSize="18" FontWeight="Bold"
                                                     TextAlignment="Center"/>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="Naziv:" Margin="0 0 10 8"/>
                                    <TextBox  Grid.Row="0" Grid.Column="1" x:Name="txtSekcijaNaziv" Margin="0 0 0 8"/>

                                    <TextBlock Grid.Row="1" Text="Opis:" Margin="0 0 10 8"/>
                                    <TextBox  Grid.Row="1" Grid.Column="1" x:Name="txtSekcijaOpis" Margin="0 0 0 8"/>

                                    <TextBlock Grid.Row="2" Text="Kapacitet max:" Margin="0 0 10 0"/>
                                    <TextBox  Grid.Row="2" Grid.Column="1" x:Name="txtKapacitet"/>
                                </Grid>

                                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Otkaži" MinWidth="90" Click="SekcijaBtnCancel_Click"/>
                                    <Button Content="Sačuvaj" MinWidth="100" Margin="10 0 0 0" Click="SekcijaBtnSave_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Popup>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
